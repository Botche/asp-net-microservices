<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">AspnetRunBasics</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
                <ul class="navbar-nav m-auto">
                    @{
                        string homeUrl = Url.Page("Index");
                        string productUrl = Url.Page("Product");
                        string cartUrl = Url.Page("Cart");
                        string orderUrl = Url.Page("Order");
                        string contanctUrl = Url.Page("Contact");
                    }

                    <li class="nav-item @(this.Context.Request.Path == homeUrl ? "active" : null)">
                        <a class="nav-link" href="@homeUrl">Home</a>
                    </li>
                    <li class="nav-item @(this.Context.Request.Path == productUrl ? "active" : null)">
                        <a class="nav-link" href="@productUrl">Product</a>
                    </li>
                    <li class="nav-item @(this.Context.Request.Path == cartUrl ? "active" : null)">
                        <a class="nav-link" href="@cartUrl">Cart</a>
                    </li>
                    <li class="nav-item @(this.Context.Request.Path == orderUrl ? "active" : null)">
                        <a class="nav-link" href="@orderUrl">Order</a>
                    </li>
                    <li class="nav-item @(this.Context.Request.Path == contanctUrl ? "active" : null)">
                        <a class="nav-link" href="@contanctUrl">Contact</a>
                    </li>
                </ul>

                <form class="form-inline my-2 my-lg-0">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search...">
                        <div class="input-group-append">
                            <button type="button" class="btn btn-secondary btn-number">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <a class="btn btn-success btn-sm ml-3" asp-area="" asp-page="/Cart">
                        <i class="fa fa-shopping-cart"></i> Cart
                        @* <span class="badge badge-light">3</span> *@
                    </a>
                </form>
            </div>
        </div>
    </nav>
</header>
